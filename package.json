{
  "name": "express-ts-babel-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for API development with express typescript and babel",
  "main": "src/index.ts",
  "scripts": {
    "type": "tsc --noEmit",
    "type-watch": "npm run type -- --watch --preserveWatchOutput",
    "start-nodemon": "nodemon --exec babel-node --extensions \".ts\" src/index.ts",
    "start-dev": "run-p -l type-watch start-nodemon",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "build-dev": "npm run clean && babel src -d dist --ignore=\"./src/**/*.spec.ts\" --extensions \".ts\"",
    "build": "run-p -l type build-dev",
    "start": "node dist/index.js"
  },
  "keywords": [
    "typescript",
    "babel",
    "boilerplate",
    "express",
    "scaffolding"
  ],
  "author": "David Lopez Maldonado",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.23",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "morgan": "^1.10.0"
  }
}
